        {
            "name": "Launch server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/serveur",
            "args": ["15003", "100"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
